<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFF"/> <!-- This sets the color of the rectangle to red -->
            <corners android:radius="4dp"/> <!-- This sets the corner radius for rounded corners -->
            <stroke android:width="1dp" android:color="#fff"/> <!-- This adds a black border with a width of 2dp -->
        </shape>
    </item>
</selector>
